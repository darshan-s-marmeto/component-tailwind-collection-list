
<div class="p-{{ section.id }} {% if section.settings.section_width == 'within_container' %} page-width {% endif %} bg-{{ section.settings.section_color_scheme }}">
  <div class="collection-list__container">
    <div class="collection-list__content {{ section.settings.text_alignment }} mb-8">
      {% if section.settings.heading != blank %}
        <h2 class="text-2xl font-bold">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      {% if section.settings.layout == 'slider' %}
        {% assign slider = true %}
      {% else %}
        {% assign slider = false %}
      {% endif %}
      
      <collection-list-slider
        class="{% if slider %} slider_container {% else %} grid grid-cols-{{ section.settings.mobile_count }} md:grid-cols-{{ section.settings.desktop_count }} gap-4 {% endif %}"
        id="collection-slider"
        data-autoplay="{{ section.settings.enable_autoplay }}"
        data-interval="{{ section.settings.autoplay_interval }}"
        data-pagination="{{ section.settings.enable_page_dots }}"
        data-arrows="{{ section.settings.enable_navigation_arrows }}"
        data-desktopcount="{{ section.settings.desktop_count }}"
        data-mobilecount="{{ section.settings.mobile_count }}"
      >
        {% if slider %}
        <div class="splide__track">
          <ul class="splide__list">
        {% endif %}
            {% for block in section.blocks %}
              {% if slider %}
              <li class="collection-list__grid-item splide__slide relative overflow-hidden w-auto">
              {% else %}
              <div class="collection-list__grid-item relative overflow-hidden h-80 w-auto">
              {% endif %}
                <a href="{{ block.settings.collection_url }}" class="collection-list_url absolute inset-0"></a>
                {% render 'image', lazyLoading: false, pictureClass: '', imageClass: '', mobileSrc: block.settings.mobile_image, desktopSrc: block.settings.desktop_image %}
                <div class="collection-list__collection-name {{ block.settings.text_alignment }}-{{ block.id }} {{ block.settings.content_alignment }}-{{ block.id }} absolute flex p-4 text-white">
                  {% if block.settings.heading != blank %}
                    <a href="{{ block.settings.collection_url }}" class="collection-link text-white">{{ block.settings.heading }}</a>
                  {% endif %}
                </div>
              {% if slider %}
                </li>
              {% else %}
              </div>
              {% endif %}
            {% endfor %}
        {% if slider %}
          </ul>
        </div>
      {% endif %}
      </collection-list-slider>
    {% endif %}
  </div>
</div>

{{ 'collection-list.css' | asset_url | stylesheet_tag }}
<style>
  .p-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media (max-width: 768px) {
    .p-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
  }
</style>
<style>
  {% for block in section.blocks %}
    .left-{{ block.id }} {
      text-align: left;
    }
    .center-{{ block.id }} {
      text-align: center;
    }
    .right-{{ block.id }} {
      text-align: right;
    }
    .collection-list__collection-name.left_top-{{ block.id }} {
      justify-content: flex-start;
      align-items: flex-start;
    }
    .collection-list__collection-name.left_middle-{{ block.id }} {
      justify-content: flex-start;
      align-items: center;
    }
    .collection-list__collection-name.left_bottom-{{ block.id }} {
      justify-content: flex-start;
      align-items: flex-end;
    }
    .collection-list__collection-name.center_top-{{ block.id }} {
      justify-content: center;
      align-items: flex-start;
    }
    .collection-list__collection-name.center_middle-{{ block.id }} {
      justify-content: center;
      align-items: center;
    }
    .collection-list__collection-name.center_bottom-{{ block.id }} {
      justify-content: center;
      align-items: flex-end;
    }
    .collection-list__collection-name.right_top-{{ block.id }} {
      justify-content: flex-end;
      align-items: flex-start;
    }
    .collection-list__collection-name.right_middle-{{ block.id }} {
      justify-content: flex-end;
      align-items: center;
    }
    .collection-list__collection-name.right_bottom-{{ block.id }} {
      justify-content: flex-end;
      align-items: flex-end;
    }
  {% endfor %}
</style>

{% if slider %}
  <script src="{{ 'collection-list.js' |  asset_url }}"></script>
{% endif %}

